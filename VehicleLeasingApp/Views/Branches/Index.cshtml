@model IEnumerable<VehicleLeasingApp.Models.Branch>

@{
    ViewBag.Title = "Branches";
}

<div class="dashboard-container">
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="sidebar-header">
            <a href="/" class="sidebar-brand">SA Vehicle Leasing</a>
            <small style="color: rgba(255,255,255,0.6);">Management System</small>
        </div>
        <ul class="sidebar-nav">
            <li>
                <a href="/Home/Index">
                    <i class="material-icons">dashboard</i>
                    Dashboard
                </a>
            </li>
            <li>
                <a href="/Vehicles/Index">
                    <i class="material-icons">directions_car</i>
                    Vehicles
                </a>
            </li>
            <li>
                <a href="/Suppliers/Index">
                    <i class="material-icons">business</i>
                    Suppliers
                </a>
            </li>
            <li>
                <a href="/Branches/Index" class="active">
                    <i class="material-icons">store</i>
                    Branches
                </a>
            </li>
            <li>
                <a href="/Clients/Index">
                    <i class="material-icons">people</i>
                    Clients
                </a>
            </li>
            <li>
                <a href="/Drivers/Index">
                    <i class="material-icons">person</i>
                    Drivers
                </a>
            </li>
        </ul>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="container">
    <div class="page-header-clean">
        <div class="header-content">
            <h1>Branches</h1>
            <div class="header-actions">
                @Html.ActionLink("Add Branch", "Create", null, new { @class = "btn btn-primary" })
            </div>
        </div>
        
        <div class="fleet-summary">
            <div class="summary-item">
                <span class="number">@Model.Count()</span>
                <span class="label">Total Branches</span>
            </div>
            <div class="summary-item">
                <span class="number">@Model.Count(b => b.IsActive)</span>
                <span class="label">Active</span>
            </div>
            <div class="summary-item">
                <span class="number">@Model.Count(b => !b.IsActive)</span>
                <span class="label">Inactive</span>
            </div>
        </div>
    </div>

    <div class="data-table-container">
        <div class="table-responsive">
            <table class="table data-table">
                <thead>
                    <tr>
                        <th>Branch</th>
                        <th>Manager</th>
                        <th>Code</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="data-row" data-status="@(item.IsActive ? "active" : "inactive")">
                            <td>
                                <div class="primary-info">
                                    <div class="name">@item.Name</div>
                                </div>
                            </td>
                            <td>
                                <span class="manager">@item.Manager</span>
                            </td>
                            <td>
                                <span class="branch-code">@item.BranchCode</span>
                            </td>
                            <td>
                                <span class="status-badge status-@(item.IsActive ? "active" : "inactive")">
                                    @(item.IsActive ? "Active" : "Inactive")
                                </span>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    @Html.ActionLink("View", "Details", new { id = item.BranchId }, new { @class = "btn btn-sm btn-outline" })
                                    @Html.ActionLink("Edit", "Edit", new { id = item.BranchId }, new { @class = "btn btn-sm btn-outline" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.BranchId }, new { @class = "btn btn-sm btn-outline btn-danger" })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
        </div>
    </div>
</div> 